@{
    ViewData["Title"] = "Categoria";
}

@model IEnumerable<Categoria>


<h4 class="title">Lista Categorias</h4>
<p class="category">
    <a class="btn btn-sm btn-danger btn-icon" asp-controller="categoria" asp-action="EditCategoria" asp-route-id="0"><i class="fas fa-plus"></i></a>
</p>

<p class="content table-responsive table-full-width">
    <table class="table table-striped" style="max-width:500px">
        <thead class="text-primary" style="background-color: beige">
            <tr>                
                <th>Id</th>
                <th>Descrição</th>        
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Id</td>
                <td>@item.Descricao</td>
                <td>
                    <a class="btn btn-sm btn-danger btn-icon" asp-controller="categoria" asp-action="ViewCategoria" asp-route-id="@item.Id"><i class="far fa-file"></i></a>
                    <a class="btn btn-sm btn-danger btn-icon" asp-controller="categoria" asp-action="EditCategoria" asp-route-id="@item.Id"><i class="far fa-edit"></i></a>
                    <a class="btn btn-sm btn-danger btn-icon" asp-controller="categoria" asp-action="DelCategoria" asp-route-id="@item.Id"><i class="far fa-trash-alt"></i></a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</p>
